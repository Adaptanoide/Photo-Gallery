{
  "name": "sunshine-cowhides",
  "version": "1.0.0",
  "description": "Sistema de Gerenciamento e Venda de Couro Bovino",
  "main": "src/server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "NODE_ENV=production node src/server.js",
    "dev": "NODE_ENV=development node src/server.js",
    "prod": "NODE_ENV=production node src/server.js",
    "test": "echo \"No tests specified\" && exit 0",
    "build": "echo \"Build complete - static files ready\"",
    "postinstall": "echo \"Dependencies installed successfully\"",
    "cache-clear": "node -e \"const SmartCache = require('./src/services/smartCache'); const cache = new SmartCache(1); cache.cleanup(); console.log('Cache cleared!');\"",
    "status": "curl http://localhost:3000/api/status",
    "logs": "pm2 logs sunshine-cowhides",
    "stop": "pm2 stop sunshine-cowhides",
    "restart": "pm2 restart sunshine-cowhides",
    "health-check": "node -e \"require('http').get('http://localhost:3000/api/status', (res) => { console.log(res.statusCode === 200 ? 'OK' : 'FAIL'); process.exit(res.statusCode === 200 ? 0 : 1); });\""
  },
  "keywords": ["sunshine", "cowhides", "leather", "b2b", "catalog"],
  "author": "Sunshine Cowhides Team",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.0",
    "bcrypt": "^6.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "googleapis": "^148.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.16.0",
    "mongoose": "^8.14.3",
    "multer": "^1.4.5-lts.2",
    "nodemailer": "^7.0.3",
    "sharp": "^0.33.2"
  },
  "devDependencies": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Adaptanoide/sunshine-cowhides.git"
  },
  "config": {
    "unsafe-perm": true
  }
}

